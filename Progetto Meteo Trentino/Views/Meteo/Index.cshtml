@model Progetto_Meteo_Trentino.ViewModels.BollettinoMeteoView

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Previsioni Meteo Trentino</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('https://static2-viaggi.corriereobjects.it/wp-content/uploads/2021/08/16_Lago_di_Carezza_iStock-1-1080x746.jpg?v=1627910643');
            background-size: cover;
            background-position: top;
        }

        .container {
            margin: 0 auto;
            max-width: 800px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.7);
        }

        .form-group {
            margin: 15px 0;
        }

        .btn {
            padding: 10px 15px;
            font-size: 16px;
        }

        .btn-success {
            background-color: #5cb85c;
            border-color: #4cae4c;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Previsioni meteo per il Trentino Alto-Adige</h2>
        <p>Data di pubblicazione: @Model.dataPubblicazione</p>
        <p>Evoluzione: @Model.evoluzione</p>
        <p>Evoluzione breve: @Model.evoluzioneBreve</p>
    </div>
    <div class="container">
        <div class="form-group">
            <form method="get" asp-controller="Meteo" asp-action="RichiestaCitta">
                <button type="submit" class="btn btn-success">Cerca città</button>
            </form>
        </div>
        <div class="form-group">
            <form method="get" asp-controller="Meteo" asp-action="RichiestaMeteoGiorno">
                <button type="submit" class="btn btn-success">Cerca giorno</button>
            </form>
        </div>
    </div>
</body>
</html>